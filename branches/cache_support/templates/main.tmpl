<% if def username %>
	<h1>Wellcome <% username %> to forum</h1>
<% else %>
	<h1>Wellcome visitor to forum</h1>
<% end %>
	<a href="/test.fcgi/newpost">New Post</a><br>
	<a href="/test.fcgi/logout">Logout</a><br>
<% call get_message %>
<% if new_message %>
	<dl>
		<% repeat %>
			<dt>Message <a href="/test.fcgi/edit/<% message_id %>"><% message_id %></a>, by <% author %></dt>
			<dd>
			<% message_body%>
			</dd>
			<% call get_message %>
		<% until not new_message %>
	</dl>
	<a href="/test.fcgi/from/<% message_id %>">next page</a>
<% else %>
	<h2>No messages on the forum</h2>
<% end %>
