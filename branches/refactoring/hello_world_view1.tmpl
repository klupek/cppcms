<% xhtml %>
<% namespace vary %>
	<% class hello uses view::hello extends master %>
	<% template body() %>
	<form action="" method="post">
	<ul>
	<% form as_ul form %>
	</ul>
	<input type="submit" value="Submit" />
	</form>
	<form action="" method="post">
	<p>
		<% foreach w in form %>
			<% separator %><br/><% item %>
				<% if w.has_message() %><% w.message() %>:<% end %>
				<% form input w %>
				<% if not w.valid() %>:<% w.error_message() %><% end %>
			<% end %>
		<% end %>
		<input type="submit" value="Submit" />

	</p>
	<% if rtl %><% end %>
		<% if not empty title %><h1><% title %></h1><% end %>
		<p><% msg %></p>
		<% if not empty username %>
		<p> The form was: nik=<% username %>, name=<% realname %>, Ok is <% if not ok%>not<% end %> checked,
			password=<% password %></p>
		<% end %>
		<% foreach x in numbers %>
			<ul>
			<% item %>
			<li><% ngt "passed one day","passed {1} days",x using x %></li>
			<% end %>
			</ul>
		<% end %>
	<% end template %>
	<% end class %>
<% end namespace %>

